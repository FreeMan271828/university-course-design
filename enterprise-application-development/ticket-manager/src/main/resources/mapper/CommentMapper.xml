<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.freeman.ticketmanager.mapper.CommentMapper">

    <resultMap id="CommentMap" type="org.freeman.ticketmanager.entity.Comment">
        <id property="id" column="id"/>
        <result property="ticketId" column="ticket_id"/>
        <result property="userId" column="user_id"/>
        <result property="content" column="content"/>
        <result property="type" column="type"/>
        <result property="createdAt" column="created_at"/>

        <!-- 扩展字段：创建人名字 -->
        <result property="creatorName" column="real_name"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_comment (ticket_id, user_id, content, type, created_at)
        VALUES (#{ticketId}, #{userId}, #{content}, #{type}, NOW())
    </insert>

    <!-- 核心查询逻辑：动态过滤 INTERNAL 评论 -->
    <select id="selectByTicketId" resultMap="CommentMap">
        SELECT
        c.*,
        u.real_name
        FROM t_comment c
        LEFT JOIN sys_user u ON c.user_id = u.id
        WHERE c.ticket_id = #{ticketId}

        <!-- 动态 SQL：如果不是内部人员，强制加上类型过滤 -->
        <if test="!isInternal">
            AND c.type = 'PUBLIC'
        </if>

        ORDER BY c.created_at ASC
    </select>

</mapper>