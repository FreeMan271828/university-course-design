<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.freeman.ticketmanager.mapper.CategoryMapper">

    <resultMap id="BaseResultMap" type="org.freeman.ticketmanager.entity.Category">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="description" column="description"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, code, description, sort_order, created_at, updated_at
    </sql>

    <!-- 新增 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_category (name, code, description, sort_order)
        VALUES (#{name}, #{code}, #{description}, #{sortOrder})
    </insert>

    <!-- 更新 -->
    <update id="update">
        UPDATE t_category
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="code != null">code = #{code},</if>
            <if test="description != null">description = #{description},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById">
        DELETE FROM t_category WHERE id = #{id}
    </delete>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        WHERE id = #{id}
    </select>

    <!-- 列表查询：按 sort_order 升序，created_at 降序 -->
    <select id="selectList" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM t_category
        <where>
            <if test="name != null and name != ''">
                AND name LIKE concat('%', #{name}, '%')
            </if>
        </where>
        ORDER BY sort_order ASC, created_at DESC
    </select>

    <!-- 查重校验: 查找 name 相同但 id 不是当前 id 的记录数 -->
    <select id="countByName" resultType="int">
        SELECT count(1) FROM t_category
        WHERE name = #{name}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

</mapper>